<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="238px"
    android:layout_height="245px"
    android:background="@color/gray_six">


    <RelativeLayout
        android:layout_width="238px"
        android:layout_height="262px"
        android:background="@color/gray_six">

        <RelativeLayout
            android:id="@+id/rl_part_one"
            android:layout_width="238px"
            android:layout_height="238px"
            android:background="@color/white">

            <!--用户的图标-->
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_act_select_player_item_icon"
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15px"
                fresco:actualImageScaleType="focusCrop"
                fresco:roundAsCircle="true" />

            <TextView
                android:id="@+id/tv_act_select_player_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_act_select_player_item_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15px"
                android:gravity="center"
                android:text="一只小黄鸡在啄米"
                android:textColor="@color/common_app_color"
                android:textSize="28px" />

            <TextView
                android:id="@+id/tv_act_select_player_item_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_act_select_player_item_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12px"
                android:gravity="center_vertical"
                android:paddingLeft="12px"
                android:paddingRight="12px"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="皇室战争骨灰级玩家"
                android:textColor="@color/gray_three"
                android:textSize="22px" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_isfollow_tip"
            android:layout_width="wrap_content"
            android:layout_height="32px"
            android:layout_centerHorizontal="true"
            android:paddingLeft="24px"
            android:paddingRight="24px"
            android:textColor="@color/white"
            android:layout_marginTop="220px"
            android:background="@drawable/select_player_item_attention_bg"
            android:gravity="center"
            android:text="+关注"
            android:textSize="22px" />

    </RelativeLayout>
</RelativeLayout>
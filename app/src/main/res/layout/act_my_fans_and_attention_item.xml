<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="20px"
    android:paddingLeft="@dimen/app_size_one"
    android:paddingRight="@dimen/app_size_one"
    android:paddingTop="20px">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_act_my_fans_and_attention_item_icon"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_centerVertical="true"
        fresco:actualImageScaleType="focusCrop"
        fresco:roundAsCircle="true" />

    <!--头像右边的名称和描述和取消关注的图标-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_toRightOf="@+id/iv_act_my_fans_and_attention_item_icon">

        <TextView
            android:id="@+id/tv_act_my_fans_and_attention_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去吧皮卡丘"
            android:textColor="#323232"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_act_my_fans_and_attention_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_act_my_fans_and_attention_item_name"
            android:layout_marginTop="20px"
            android:text="这是番茄的简介"
            android:textColor="@color/gray_two"
            android:textSize="24px" />

        <ImageView
            android:id="@+id/iv_act_my_fans_and_attention_item_follow_icon"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/attentioned" />

    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--显示人气明显的图标-->
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_frag_find_popular_star_item_icon"
        android:layout_width="104px"
        android:layout_height="104px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/app_size_one"
        fresco:actualImageScaleType="focusCrop"
        fresco:roundAsCircle="true" />


    <TextView
        android:id="@+id/tv_frag_find_popular_star_item_name"
        android:layout_width="104px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sdv_frag_find_popular_star_item_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10px"
        android:gravity="center"
        android:maxLines="1"
        android:text="用户id"
        android:textSize="24px" />

</RelativeLayout>
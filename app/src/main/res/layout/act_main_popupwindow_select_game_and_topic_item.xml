<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_act_main_popupwindow_select_game_and_topic_item_icon"
        android:layout_width="144px"
        android:layout_height="144px"
        android:layout_centerHorizontal="true"
        fresco:actualImageScaleType="focusCrop"
        fresco:roundAsCircle="true" />

    <TextView
        android:id="@+id/tv_act_main_popupwindow_select_game_and_topic_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_act_main_popupwindow_select_game_and_topic_item_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/app_size_one"
        android:text="皇室战争" />

</RelativeLayout>
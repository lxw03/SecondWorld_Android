<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/app_size_one">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginLeft="@dimen/app_size_one"
        android:layout_marginRight="20px"
        app:roundAsCircle="true" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/sdv"
        android:text="动态通知"
        android:textColor="@color/black"
        android:textSize="28px" />

    <!--android:layout_alignBottom="@+id/sdv"-->
    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="36px"
        android:layout_toRightOf="@+id/sdv"
        android:text="皇室战争皇室战争"
        android:textColor="@color/gray_three"
        android:textSize="20px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/sdv"
        android:layout_marginTop="18px"
        android:background="@color/gray_two" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_bg"
    tools:context=".modular.setting.newMessageRemindSetting.ui.NewMessageRemindSettingAct">

    <!--标题栏部分-->
    <include layout="@layout/red_titlebar_style_one" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_act_titlebar_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--新消息提醒开关-->
            <RelativeLayout
                style="@style/setting_item"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_act_new_message_remind_new_message_remind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新消息提通知"
                    android:textSize="28px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_act_new_message_remind_new_message_remind"
                    android:text="如果您要关闭或开启第二世界的新消息通知,请在ipone的xxxxxxxxxxxxxxxxxxx"
                    android:textSize="20px" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="4dp" />

            </RelativeLayout>

            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/setting_split_line_bg" />

            <!--声音的开关-->
            <RelativeLayout style="@style/setting_item">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="声音"
                    android:textSize="28px" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="4dp" />

            </RelativeLayout>

            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/setting_split_line_bg" />

            <!--震动的开关-->
            <RelativeLayout style="@style/setting_item">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="震动"
                    android:textSize="28px" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="4dp" />

            </RelativeLayout>

            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/setting_split_line_bg" />

            <!--提醒时显示消息内容-->
            <RelativeLayout style="@style/setting_item">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="提醒时显示消息内容"
                    android:textSize="28px" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="4dp" />

            </RelativeLayout>

            <!--勿扰时段-->
            <RelativeLayout
                android:id="@+id/rl_act_new_message_remind_not_disturb"
                style="@style/setting_item"
                android:layout_marginTop="30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="勿扰时段"
                    android:textSize="28px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/base_margin"
                    android:layout_toLeftOf="@+id/iv_act_new_message_remind_do_not_disturb"
                    android:text="关闭"
                    android:textSize="28px" />

                <ImageView
                    android:id="@+id/iv_act_new_message_remind_do_not_disturb"
                    style="@style/setting_item_arrow_right_size" />

            </RelativeLayout>

            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/setting_split_line_bg" />

            <!--功能提醒-->
            <RelativeLayout
                android:id="@+id/rl_act_new_message_remind_function_remind"
                style="@style/setting_item">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="功能提醒"
                    android:textSize="28px" />

                <ImageView style="@style/setting_item_arrow_right_size" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/app_size_one">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_frag_zan_for_status_notifi_item_icon"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_marginRight="30px"
        fresco:actualImageScaleType="centerCrop"
        fresco:backgroundImage="@mipmap/ic_launcher"
        fresco:roundAsCircle="true" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/sdv_frag_zan_for_status_notifi_item_icon"
        android:text="小胖子"
        android:textColor="@color/black"
        android:textSize="28px" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="14px"
        android:layout_toRightOf="@+id/sdv_frag_zan_for_status_notifi_item_icon"
        android:textColor="@color/gray_two"
        android:textSize="16px" />

    <TextView
        android:id="@+id/tv_frag_zan_for_status_notifi_item_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sdv_frag_zan_for_status_notifi_item_icon"
        android:layout_marginTop="18px"
        android:layout_toLeftOf="@+id/tv_reply"
        android:text="赞了你的文章"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_frag_zan_for_status_notifi_item_text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_frag_zan_for_status_notifi_item_tip"
        android:layout_marginTop="34px"
        android:background="@color/gray_one"
        android:ellipsize="end"
        android:padding="20px"
        android:singleLine="true"
        android:text="原文:如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_reply"
        android:layout_width="100px"
        android:layout_height="44px"
        android:layout_alignParentRight="true"
        android:background="@drawable/frag_zan_for_status_notifi_item_reply_bg"
        android:gravity="center"
        android:text="回复"
        android:textColor="@color/common_app_color"
        android:textSize="22px" />


</RelativeLayout>
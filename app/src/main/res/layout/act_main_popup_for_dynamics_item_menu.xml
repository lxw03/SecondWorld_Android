<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#AAAAAAAA"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_shield"
        android:layout_width="match_parent"
        android:layout_height="78px"
        android:layout_marginLeft="@dimen/app_size_one"
        android:layout_marginRight="@dimen/app_size_one"
        android:layout_marginTop="@dimen/app_size_one"
        android:background="@drawable/white_solid_no_stroke_fillet_bg"
        android:gravity="center"
        android:text="举报"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_report"
        android:layout_width="match_parent"
        android:layout_height="78px"
        android:layout_marginTop="1px"
        android:layout_below="@+id/tv_shield"
        android:layout_marginLeft="@dimen/app_size_one"
        android:layout_marginRight="@dimen/app_size_one"
        android:background="@drawable/white_solid_no_stroke_fillet_bg"
        android:gravity="center"
        android:text="屏蔽该用户"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="78px"
        android:layout_below="@+id/tv_report"
        android:layout_marginBottom="@dimen/app_size_one"
        android:layout_marginLeft="@dimen/app_size_one"
        android:layout_marginRight="@dimen/app_size_one"
        android:layout_marginTop="20px"
        android:background="@drawable/white_solid_no_stroke_fillet_bg"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/black" />

</RelativeLayout>